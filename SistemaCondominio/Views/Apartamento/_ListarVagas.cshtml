@model IEnumerable<SistemaCondominio.Models.ApartamentoVaga>

@{
    Layout = null;
}

<div class="row">

    @foreach (var vaga in Model)
    {
        <div style="position: relative; padding: 3px;">
            <button class="btn @(vaga.ApartamentoId > 0 ? "btn-secondary" : "btn-outline-dark")  btn-block" id="vg-@(vaga.Numero)" onclick="mostraDiv(@vaga.Numero)">
                @vaga.Numero.ToString("000")

                <div class="alert alert-dark" style="display: none; position: absolute; top: 3px; left: 3px; z-index: 99; background-color: #343a40; border-color: #343a40; color: #fff; text-align: left;" id="div-@(vaga.Numero)">
                    <span style="font-size: 14px;">Vaga @vaga.Numero.ToString("000") ( @vaga.Piso )</span><br />
                    <span style="font-size: 14px;">
                        @(vaga.ApartamentoId > 0 ? vaga.Apartamento.Bloco.Nome + " Ap " + vaga.Apartamento.Numero.ToString("000") : "Desocupada")
                    </span>
                    @if (vaga.ApartamentoId > 0)
                    {
                        <i class="fas fa-arrow-alt-circle-right" onclick="window.location.href = '/Apartamento/Detalhes?ApartamentoId=@vaga.ApartamentoId'"></i>
                    }

                    <div class="detalhesVaga" onclick="detalhesVaga(@vaga.VagaId);">Entrar</div>
                </div>
            </button>

        </div>
    }

</div>